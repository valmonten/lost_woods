<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New Trail</title>
    <style>
        label{
            display: block;
        }
    </style>
</head>
<body>
    <h1>Add a New Trail</h1>
    <a href="/">Go Home</a>
    @{
        @if(ViewBag.iserrors)
        {
            @foreach(var error in ViewBag.errors)
            {
                @if(@error.Errors.Count > 0)
                {
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
        }
    }
    <form action="/addnewtrail/" method="post">
        <label>Trail Name: <input type="text" name="name"></label>
        <label>Description: <textarea name="description"></textarea></label>
        <label>Trail Length: <input type="text" name="length"></label>
        <label>Elevation Change: <input type="text" name="elevationchange"></label>
        <label>Longitude and Latitude: <input type="text" name="longi"> <input type="text" name="lati"></label>
        <input type="submit" value="Submit">
    </form>
</body>
</html>